[Unit]
Description=Redis Server service
Documentation=https://redis.io/documentation
AssertPathExists={{ redis_lib_dir }}

[Service]
ExecStart={{ redis_bin }} {{ redis_server_configuration_file }}
LimitNOFILE=10032
NoNewPrivileges=yes
Type=forking
TimeoutStartSec=300
TimeoutStopSec=300
UMask=0077
User={{ redis_user }}
Group={{ redis_group }}
WorkingDirectory={{ redis_lib_dir }}

[Install]
WantedBy=multi-user.target
